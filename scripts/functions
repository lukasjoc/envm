#!/bin/bash
# Defines just some essential functions.. Functions that are not used at least twice per week are being removed


# sane defaults for vim users on linux or mac
ignore() {
	cat << EOM
*~
[._]*.sw[a-p]
.netrwhist
.DS_Store
tags
EOM
}

# print a current ISC License
license() {
